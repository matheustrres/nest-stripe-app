{
	"name": "nest-stripe-app",
	"version": "1.0.0",
	"author": "Matheus Torres <matheustrres.rj@gmail.com>",
	"description": "",
	"private": true,
	"license": "MIT",
	"scripts": {
		"docker:up": "docker-compose up -d",
		"docker:stop": "docker-compose -f docker-compose.yml down --remove-orphans",
		"prebuild": "rm -rf dist",
		"build": "nest build -p ./tsconfig.build.json -c ./nest-cli.json -b swc",
		"postbuild": "find dist -name '*.spec.js' -o -name '__tests__' | xargs rm -rf",
		"format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
		"start": "dotenv -e .env -- nest start",
		"start:dev": "pnpm start --watch",
		"start:prod": "node --env-file=.env ./dist/main",
		"lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
		"pretest": "rm -rf dist",
		"test": "dotenv -e .env.test -- jest --passWithNoTests",
		"test:watch": "pnpm test -- --watch",
		"test:cov": "pnpm test -- --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"pretest:e2e": "pnpm docker:up --force-recreate",
		"test:e2e": "pnpm test -- --config ./jest.e2e-config.ts",
		"posttest:e2e": "pnpm docker:stop database",
		"prepare": "husky install",
		"prisma:dev": "npx prisma migrate dev",
		"prisma:deploy": "npx prisma migrate deploy",
		"prisma:generate": "npx prisma generate"
	},
	"dependencies": {
		"@golevelup/nestjs-stripe": "^0.9.0",
		"@google/generative-ai": "^0.21.0",
		"@nestjs/cache-manager": "^2.3.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.0.0",
		"@nestjs/event-emitter": "^2.1.1",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/swagger": "^7.4.2",
		"@node-rs/bcrypt": "^1.10.5",
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "^5.19.0",
		"cache-manager": "^5.7.6",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"date-fns": "^4.1.0",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"nanoid": "github:ai/nanoid#v3",
		"reflect-metadata": "^0.2.0",
		"resend": "4.0.1-alpha.0",
		"rxjs": "^7.8.1",
		"stripe": "^17.3.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.2.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@swc/cli": "^0.3.14",
		"@swc/core": "^1.7.10",
		"@swc/helpers": "^0.5.8",
		"@swc/jest": "^0.2.36",
		"@tsconfig/node-lts": "^20.1.3",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"dotenv-cli": "^7.4.2",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.0.0",
		"prisma": "^5.19.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.5.4"
	}
}
