generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(cuid())
  name               String
  email              String        @unique
  isAccountConfirmed Boolean       @default(false)
  password           String
  role               String
  tokens             Float         @default(0)
  subscription       Subscription?
  invites            Invite[]      @relation("Owner")
  Invite             Invite?       @relation("Guest")
  workspacesAsOwner  Workspace[]   @relation("Owner")
  workspacesAsGuest  Workspace[]   @relation("Guests")
  createdAt          DateTime      @default(now()) @map("created_at")
  updatedAt          DateTime      @updatedAt @map("updated_at")

  @@index([email])
  @@map("users")
}

model Workspace {
  id         String    @id @default(cuid())
  name       String    @unique
  status     String // active archived deleted
  tags       String[]
  owner      User      @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId    String    @map("owner_id")
  users      User[]    @relation("Guests")
  deletedAt  DateTime? @map("deleted_at")
  archivedAt DateTime? @map("archived_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  @@index([name, ownerId])
  @@map("workspaces")
}

model Invite {
  id        String   @id @default(cuid())
  expiresAt DateTime @map("expires_at")
  status    String
  ownerId   String   @map("owner_id")
  owner     User     @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  guest     User?    @relation("Guest", fields: [guestId], references: [id])
  guestId   String?  @unique @map("guest_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([ownerId])
  @@map("invites")
}

model Guest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("guests")
}

model Subscription {
  id                   String   @id @default(cuid())
  vendorSubscriptionId String   @map("vendor_subscription_id")
  vendorCustomerId     String   @unique @map("vendor_customer_id")
  vendorProductId      String   @map("vendor_product_id")
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               String   @unique @map("user_id")
  status               String
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  @@index([userId, vendorSubscriptionId, vendorProductId])
  @@map("subscriptions")
}
